<UserControl
    x:Class="ChatMessageApp.UserControls.MessageChat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="messageChat">

    <Border
        Margin="45,5,0,0"
        Padding="10,7"
        HorizontalAlignment="Left"
        Background="{Binding ElementName=messageChat, Path=Color}"
        CornerRadius="0 10 10 10">

        <TextBlock
            Margin="3,0,0,2"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="#FFF"
            Text="{Binding ElementName=messageChat, Path=Message}" />
    </Border>
</UserControl>
