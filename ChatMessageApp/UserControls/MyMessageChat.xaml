<UserControl
    x:Class="ChatMessageApp.UserControls.MyMessageChat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="myMessageChat">

    <Border
        Margin="0,5,0,0"
        Padding="10,7"
        HorizontalAlignment="Right"
        Background="#F8F7FC"
        CornerRadius="10 0 10 10">
        <TextBlock
            Margin="3,0,3,2"
            VerticalAlignment="Center"
            FontSize="14"
            Foreground="#94939A"
            Text="{Binding ElementName=myMessageChat, Path=Message}" />
    </Border>
</UserControl>
