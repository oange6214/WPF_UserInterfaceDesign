<UserControl
    x:Class="TVSettingsApp.Views.TimeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:TVSettingsApp.UserControls">

    <StackPanel
        MaxWidth="800"
        Margin="50,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center">

        <uc:TimeSetting
            Title="Auto Attach"
            HasToggle="True"
            IsChecked="True" />
        <uc:TimeSetting
            Title="Time Zone"
            HasText="True"
            IsChecked="True"
            Text="GMT +02:00, Eastern Eu..." />
        <uc:TimeSetting Title="Daylight Saving" HasToggle="True" />
        <uc:TimeSetting Title="24 Hours" HasToggle="True" />
        <uc:TimeSetting Title="More ..." />

    </StackPanel>
</UserControl>
