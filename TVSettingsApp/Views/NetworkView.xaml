<UserControl
    x:Class="TVSettingsApp.Views.NetworkView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:TVSettingsApp.UserControls">

    <StackPanel
        MaxWidth="800"
        Margin="50,0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center">

        <uc:TimeSetting
            Title="Enable Wifi"
            HasToggle="True"
            IsChecked="True" />
        <uc:TimeSetting
            Title="         Network SDN-1"
            HasText="True"
            HasToggle="False"
            Text="...  " />
        <uc:TimeSetting
            Title="         Network SDN-2"
            HasText="True"
            HasToggle="False"
            Text="...  " />
        <uc:TimeSetting
            Title="         Network SDN-3"
            HasText="True"
            HasToggle="False"
            Text="...  " />
        <uc:TimeSetting Title="Enable Hotspot" HasToggle="True" />
        <uc:TimeSetting Title="Mac Address" />

    </StackPanel>
</UserControl>
