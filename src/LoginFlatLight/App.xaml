<Application
    x:Class="LoginFlatLight.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LoginFlatLight"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/GenericStyle.xaml" />
                <ResourceDictionary Source="/Resources/LoginFlatLightDefaultColor.xaml" />
                <ResourceDictionary Source="/Resources/LoginFlatLightStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>