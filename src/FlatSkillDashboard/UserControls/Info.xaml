<UserControl
    x:Class="FlatSkillDashboard.UserControls.Info"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
    xmlns:local="clr-namespace:FlatSkillDashboard.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="info"
    mc:Ignorable="d">

    <StackPanel>
        <fa:IconImage
            Width="20"
            Height="20"
            Margin="0,0,0,7"
            Foreground="{Binding ElementName=info, Path=Color}"
            Icon="Circle" />
        <TextBlock
            HorizontalAlignment="Center"
            FontWeight="SemiBold"
            Foreground="#303A4F"
            Text="{Binding ElementName=info, Path=Title}" />
        <TextBlock
            Margin="0,3,0,0"
            HorizontalAlignment="Center"
            Foreground="#9CA2B3"
            Text="{Binding ElementName=info, Path=Desc}" />
    </StackPanel>
</UserControl>
