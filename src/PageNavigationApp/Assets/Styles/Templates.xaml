                <!--  // Icon //  -->

                <ContentPresenter
                    x:Name="Icon"
                    Width="35"
                    Height="35"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    ContentSource="Icon" />

                <!--  // Menu Text //  -->

                <ContentPresenter
                    Grid.Column="2"
                    Margin="3,0,0,0"
                    HorizontalAlignment="Left"
