<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:PageNavigationApp.Controls">

    <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="{x:Type control:Btn}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:Btn}">
                    <Grid>
                        <Image Source="{TemplateBinding ImageSource}" Style="{StaticResource Image_Style}" />
                        <TextBlock Style="{StaticResource Text_Style}" Text="{TemplateBinding ButtonText}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>