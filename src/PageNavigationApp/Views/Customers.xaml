<UserControl
    x:Class="PageNavigationApp.Views.Customers"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PageNavigationApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:PageNavigationApp.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="622"
    Style="{StaticResource Page_Style}"
    mc:Ignorable="d">

    <UserControl.DataContext>
        <vm:CustomerVM />
    </UserControl.DataContext>

    <Grid>
        <Border CornerRadius="0 20 20 0">
            <Border.Background>
                <ImageBrush ImageSource="/Assets/Images/customer_page.png" Stretch="None" />
            </Border.Background>
        </Border>

        <TextBlock
            Margin="80,153,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/Assets/Fonts/#Rubik Medium"
            FontSize="12"
            Foreground="#DBDBDB"
            Text="Customer ID ：" />

        <TextBlock
            Margin="175,153,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontFamily="/Assets/Fonts/#Rubik Medium"
            FontSize="12"
            Foreground="#CED565"
            Text="{Binding CustomerID}" />
    </Grid>
</UserControl>