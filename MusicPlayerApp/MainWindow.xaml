<Window
    x:Class="MusicPlayerApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:uc="clr-namespace:MusicPlayerApp.UserControls"
    Width="1050"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None">

    <Border
        Background="White"
        CornerRadius="40"
        MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <!--  Menu  -->
            <Border
                Grid.RowSpan="2"
                Background="White"
                CornerRadius="40 0 0 40">
                <StackPanel Margin="0,30,0,0">
                    <!--  Ellipses  -->
                    <StackPanel
                        Margin="63,10,0,10"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal">
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="#FF6258" />
                        <Ellipse
                            Width="10"
                            Height="10"
                            Margin="7,0"
                            Fill="#FFBF2F" />
                        <Ellipse
                            Width="10"
                            Height="10"
                            Fill="#2ACB42" />
                    </StackPanel>

                    <TextBlock Style="{StaticResource menuTitle}" Text="LIBRARY" />

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Home" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <Button
                        Background="#02BE68"
                        Foreground="White"
                        Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Playlists" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" Visibility="Visible" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Artists" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Albums" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Songs" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <TextBlock Style="{StaticResource menuTitle}" Text="DISCOVER" />

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Store" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="Radio" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>

                    <Button Style="{StaticResource menuButton}">
                        <Grid>
                            <TextBlock Margin="0,0,0,2" Text="For you" />
                            <Icon:PackIconMaterial Style="{StaticResource menuButtonIcon}" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Border>

            <!--  Music Left Section  -->
            <StackPanel
                Grid.Column="1"
                Margin="40,60,10,0"
                Background="White">
                <TextBlock Style="{StaticResource titleText}" Text="Home" />

                <Border Margin="0,20,0,0" CornerRadius="20">
                    <Border.Background>
                        <LinearGradientBrush>
                            <GradientStop Offset="0" Color="#30AD9A" />
                            <GradientStop Offset="1" Color="#18C274" />
                        </LinearGradientBrush>
                    </Border.Background>

                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="20"
                            Opacity="0.4"
                            ShadowDepth="0"
                            Color="#1FAE7E" />
                    </Border.Effect>

                    <Grid>
                        <Border CornerRadius="20" Opacity="0.07">
                            <Border.Background>
                                <ImageBrush ImageSource="Apps/Images/u2.png" Stretch="UniformToFill" />
                            </Border.Background>
                        </Border>

                        <!--  Music List  -->
                        <StackPanel Margin="30">
                            <TextBlock
                                FontSize="26"
                                FontWeight="Bold"
                                Foreground="White"
                                Text="Daily Singer" />
                            <TextBlock
                                Margin="0,10,0,20"
                                FontSize="18"
                                FontWeight="SemiBold"
                                Foreground="#C0E6DE"
                                Text="Taylor Swift" />

                            <uc:SongItem
                                Title="Love Story"
                                Number="01"
                                Time="03:56" />
                            <uc:SongItem
                                Title="You Need to Calm"
                                Number="02"
                                Time="03:39" />
                            <uc:SongItem
                                Title="Blank Space"
                                Number="03"
                                Time="02:59" />
                            <uc:SongItem
                                Title="ME"
                                IsActive="True"
                                Number="04"
                                Time="03:33" />
                            <uc:SongItem
                                Title="Shake It Off"
                                Number="05"
                                Time="05:52" />
                            <uc:SongItem
                                Title="Red"
                                Number="06"
                                Time="04:47" />
                            <uc:SongItem
                                Title="You Belong With Me"
                                Number="07"
                                Time="06:20" />

                        </StackPanel>


                    </Grid>


                </Border>
            </StackPanel>

            <!--  Music Right Section  -->
            <Border
                Grid.Column="2"
                Margin="0,22,0,0"
                Background="White"
                CornerRadius="0 40 0 0">
                <StackPanel Margin="30,50,30,0">
                    <TextBlock
                        Margin="0,0,0,10"
                        FontSize="28"
                        Style="{StaticResource titleText}"
                        Text="Populaer" />

                    <!--  Populars  -->
                    <uc:PopularSong
                        Title="My House"
                        Image="Apps/Images/u2.png"
                        Time="03:13" />
                    <uc:PopularSong
                        Title="Blank Space"
                        Image="Apps/Images/u3.png"
                        IsActive="True"
                        Time="04:02" />
                    <uc:PopularSong
                        Title="Love Story"
                        Image="Apps/Images/u1.png"
                        Time="05:04" />
                    <uc:PopularSong
                        Title="Red Home"
                        Image="Apps/Images/u4.png"
                        Time="03:27" />

                    <TextBlock
                        Margin="0,30,0,20"
                        FontSize="24"
                        Style="{StaticResource titleText}"
                        Text="Playlists" />

                    <!--  Playlists  -->
                    <StackPanel Orientation="Horizontal">
                        <uc:Playlist
                            Title="Glory"
                            Desc="Kutless"
                            Image="Apps/Images/m1.jpg" />
                        <uc:Playlist
                            Title="Mitacle"
                            Margin="4,0,0,0"
                            Desc="Fiasder"
                            Image="Apps/Images/m3.jpg" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!--  Player  -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="40,0,0,0"
                Background="#03BF69"
                CornerRadius="40 0 40 0">

                <StackPanel Orientation="Horizontal">

                    <Ellipse
                        Width="60"
                        Height="60"
                        Margin="30,0,0,0">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="Apps/Images/m2.jpg" />
                        </Ellipse.Fill>
                    </Ellipse>

                    <StackPanel Margin="20,0,30,0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="22"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="ME" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="SemiBold"
                            Foreground="#9AE5C3"
                            Text="Taylor Swift" />
                    </StackPanel>

                    <Button Style="{StaticResource playerButton}">
                        <Icon:PackIconMaterial Kind="SkipPrevious" Style="{StaticResource playerButtonIcon}" />
                    </Button>

                    <Button Style="{StaticResource playerButton}">
                        <Icon:PackIconMaterial Kind="Pause" Style="{StaticResource playerButtonIcon}" />
                    </Button>

                    <Button Style="{StaticResource playerButton}">
                        <Icon:PackIconMaterial Kind="SkipNext" Style="{StaticResource playerButtonIcon}" />
                    </Button>

                    <Slider
                        x:Name="slider"
                        Width="350"
                        VerticalAlignment="Center"
                        IsSelectionRangeEnabled="True"
                        SelectionEnd="{Binding ElementName=slider, Path=Value}"
                        Style="{DynamicResource SliderStyle1}"
                        Value="5" />

                    <Button Style="{StaticResource playerButton}">
                        <Icon:PackIconMaterial Kind="VolumeMedium" Style="{StaticResource playerButtonIcon}" />
                    </Button>

                </StackPanel>

            </Border>
        </Grid>
    </Border>
</Window>
